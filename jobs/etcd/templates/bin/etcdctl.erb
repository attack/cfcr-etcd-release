#!/bin/bash

<% etcd_endpoints = link('etcd').instances.map { |server| "https://#{server.address}:2379" } %>

etcd_endpoints="<%= etcd_endpoints.join(",") %>"

if [[ "${LOCAL}" -eq "true" ]]; then
  etcd_endpoints="https://<%= spec.address %>:2379"
fi

if [[ "${ETCDCTL_API}" -eq "3" ]]; then
  /var/vcap/packages/etcd/bin/etcdctl \
    --cacert /var/vcap/jobs/etcd/config/client-ca.crt \
    --cert /var/vcap/jobs/etcd/config/client.crt \
    --key /var/vcap/jobs/etcd/config/client.key \
    --endpoints "${etcd_endpoints}" \
    "$@"
else
  /var/vcap/packages/etcd/bin/etcdctl \
    --ca-file /var/vcap/jobs/etcd/config/client-ca.crt \
    --cert-file /var/vcap/jobs/etcd/config/client.crt \
    --key-file /var/vcap/jobs/etcd/config/client.key \
    --endpoints "${etcd_endpoints}" \
    "$@"
fi
