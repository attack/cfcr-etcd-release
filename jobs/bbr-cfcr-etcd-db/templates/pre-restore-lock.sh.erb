#!/bin/bash
<% if p('release_level_backup') %>

set -exo pipefail
/var/vcap/bosh/bin/monit unmonitor kube-apiserver
/var/vcap/jobs/bpm/bin/bpm stop kube-apiserver
/var/vcap/bosh/bin/monit unmonitor etcd
/var/vcap/jobs/bpm/bin/bpm stop etcd

rm -rf /var/vcap/store/etcd

<% else %>
echo "backup script deactivated due to release_level_backup being set to FALSE\n"
<% end %>
